<%# plugins/foton_cash_flow/app/views/foton_cash_flow/entries/_charts.html.erb %>

<div class="cf-charts-container">
  
  <div class="cf-chart-card">
    <h3 class="cf-chart-title">Receita vs. Despesa Mensal</h3>
    <canvas id="cashFlowBarChart"></canvas>
  </div>

  <div class="cf-chart-card">
    <h3 class="cf-chart-title">Balan√ßo Acumulado</h3>
    <canvas id="cashFlowBalanceChart"></canvas>
  </div>

  <div class="cf-chart-card">
    <h3 class="cf-chart-title">Fluxo Acumulado</h3>
    <canvas id="cashFlowCumulativeChart"></canvas>
  </div>
  
  <div class="cf-chart-card">
    <h3 class="cf-chart-title">Despesas por Categoria</h3>
    <canvas id="cashFlowPieChart"></canvas>
  </div>

</div>

<script>
  window.cashFlowBarData = {
    labels: <%= raw bar_chart_labels.to_json %>,
    revenue: <%= raw bar_chart_revenue.to_json %>,
    expense: <%= raw bar_chart_expense.to_json %>
  };

  window.cashFlowPieData = {
    labels: <%= raw pie_chart_labels.to_json %>,
    data: <%= raw pie_chart_data.to_json %>
  };

  window.cashFlowBalanceData = {
    labels: <%= raw balance_chart_labels.to_json %>,
    data: <%= raw balance_chart_data.to_json %>
  };

  window.cashFlowCumulativeData = {
    labels: <%= raw cumulative_revenue_labels.to_json %>,
    revenue: <%= raw cumulative_revenue_data.to_json %>,
    expense: <%= raw cumulative_expense_data.to_json %>
  };
</script>