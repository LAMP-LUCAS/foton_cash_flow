<%# plugins/foton_cash_flow/app/views/foton_cash_flow/entries/_summary.html.erb %>

<section class="cf-summary">
  <div class="cf-card">
    <div class="cf-card-label"><%= l(:label_total_revenue) %>:</div>
    <div class="cf-card-value cf-success"><%= format_amount(total_revenue) %></div>
  </div>
  <div class="cf-card">
    <div class="cf-card-label"><%= l(:label_total_expense) %>:</div>
    <div class="cf-card-value cf-danger"><%= format_amount(total_expense) %></div>
  </div>
  <div class="cf-card">
    <div class="cf-card-label"><%= l(:label_balance) %>:</div>
      <div class="cf-card-value <%= balance.present? && balance.to_f >= 0 ? 'cf-success' : 'cf-danger' %>"><%= format_amount(balance) %></div>
  </div>
</section>

<%# Fim do arquivo _summary.html.erb %>