<%# 
  Arquivo: app/views/foton_cash_flow/entries/_filter_templates.html.erb
  Descrição: Contém o template para o pop-up de filtro (estilo Notion).
             Este template é clonado e manipulado pelo filter_popup.js.
%>
<template id="filter-popup-template">
  <div class="cf-filter-popup">
    <div class="cf-popup-content">
      <p class="cf-popup-title">
        <%= l('foton_cash_flow.filters.filter_by') %> <strong class="cf-popup-column-name"></strong>
      </p>

      <%# Grupo de Filtro para Texto (string) %>
      <div class="cf-filter-group" data-type="string" style="display: none;">
        <select class="cf-filter-operator" %>
          <option value=""></option>
          <option value="contains"><%= l('foton_cash_flow.filters.operators.contains') %></option>
          <option value="not_contains"><%= l('foton_cash_flow.filters.operators.not_contains') %></option>
          <option value="is"><%= l('foton_cash_flow.filters.operators.is') %></option>
          <option value="is_not"><%= l('foton_cash_flow.filters.operators.is_not') %></option>
          <option value="is_empty"><%= l('foton_cash_flow.filters.operators.is_empty') %></option>
          <option value="is_not_empty"><%= l('foton_cash_flow.filters.operators.is_not_empty') %></option>
        </select>
        <input type="text" class="cf-filter-input" placeholder="<%= l('foton_cash_flow.filters.placeholders.type_a_value') %>">
      </div>

      <%# Grupo de Filtro para Data (date) %>
      <div class="cf-filter-group" data-type="date" style="display: none;">
        <div class="cf-filter-date-inputs">
          <input type="date" class="cf-filter-value-start" title="<%= l('foton_cash_flow.fields.date') %>">
          <span class="cf-filter-and" style="display: none;"><%= l('foton_cash_flow.general.and') %></span>
          <input type="date" class="cf-filter-value-end" title="<%= l('foton_cash_flow.fields.date') %>">
        </div>
      </div>

      <%# Grupo de Filtro para Lista (list) %>
      <div class="cf-filter-group" data-type="list" style="display: none;">
        <div class="cf-filter-checkbox-container">
          <%# Checkboxes serão populados dinamicamente pelo JavaScript %>
        </div>
        <div class="cf-filter-no-options" style="display: none;">
          <%= l('foton_cash_flow.filters.no_options_available') %>
        </div>
      </div>

      <%# Ações do Popup %>
      <div class="cf-popup-actions">
        <button class="cf-apply-filter-btn cf-btn cf-btn-primary"><%= l('foton_cash_flow.general.apply') %></button>
      </div>
    </div>
  </div>
</template>