<section class="cf-summary">
  <div class="cf-card">
    <div class="cf-card-label">Receitas</div>
    <div class="cf-card-value cf-success"><%= format_amount(total_revenue) %></div>
  </div>
  <div class="cf-card">
    <div class="cf-card-label">Despesas</div>
    <div class="cf-card-value cf-danger"><%= format_amount(total_expense) %></div>
  </div>
  <div class="cf-card">
    <div class="cf-card-label">Saldo</div>
    <div class="cf-card-value <%= balance.present? && balance.to_f >= 0 ? 'cf-success' : 'cf-danger' %>"><%= format_amount(balance) %></div>
  </div>
</section>