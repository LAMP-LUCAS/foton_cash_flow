<div id="reconciliation-modal" class="cf-modal-overlay" style="display: none;">
  <div class="cf-modal-content">
    <div class="cf-modal-header">
      <h3 class="cf-modal-title"><%= l('foton_cash_flow.reconciliation.title') %></h3>
      <button type="button" class="cf-modal-close-btn">&times;</button>
    </div>
    <div id="reconciliation-body" class="cf-modal-body">
      <div class="cf-spinner" style="display: none;"><!-- Spinner pode ser estilizado aqui ou no CSS principal --></div>
    </div>
    <div class="cf-modal-footer">
      <button type="button" id="cancel-reconciliation-btn" class="cf-btn cf-btn-secondary"><%= l('foton_cash_flow.general.cancel') %></button>
      <button type="button" 
              id="finalize-import-btn" 
              class="cf-btn cf-btn-primary" 
              data-finalize-url="<%= finalize_url %>"><%= l('foton_cash_flow.reconciliation.confirm_and_import') %></button>
    </div>
  </div>
</div>